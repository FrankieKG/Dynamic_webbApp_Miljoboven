@{
	Layout = "_CoordinatorLayout";
}

@model Errand

<h2>Rapportera brott</h2>
<p class="info">Du är inloggad som samordnare</p>
<p>Fyll i formuläret nedan, alla rutor markerade med stjärna (*) måste fyllas i</p>

<form method="post" asp-controller="Coordinator" asp-action="CoordValidate">
	<div asp-validation-summary="All"></div>
	<p>
		<input type="hidden" name="isSubmitted" value="true" />
	</p>
	<p>
		<label class="label" asp-for="Place"></label><br />
		<input asp-for="Place" /> *
	</p>
	<p>
		<label class="label" asp-for="TypeOfCrime"></label><br />
		<input asp-for="TypeOfCrime" /> *
	</p>
	<p>
		<label class="label" asp-for="DateOfObservation"></label><br />
		<input asp-for="DateOfObservation" /> *
	</p>
	<p>
		<label class="label" asp-for="InformerName"></label><br />
		<input asp-for="InformerName" /> *
	</p>
	<p>
		<label class="label" asp-for="InformerPhone"></label><br />
		<input asp-for="InformerPhone" /> *
	</p>
	<p>
		<span class="label">Beskriv din observation<br /> (ex. namn på misstänkt person):</span><br />
		<textarea name="observation" rows="5" cols="16" asp-for="Observation"></textarea>
	</p>
	<p>
		<input class="button" type="submit" value="Skicka in" />
	</p>
</form>