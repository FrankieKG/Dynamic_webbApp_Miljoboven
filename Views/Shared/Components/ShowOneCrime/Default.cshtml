@model Errand
	@*Detaljsida med data för ett specifikt ärende*@
<h3>Ärende: @Model.RefNumber</h3>
<section id="leftColumn">
	<h3>Anmälan</h3>
	<p>
		<span class="label">Typ av brott: </span><br />@Model.TypeOfCrime
	</p>
	<p>
		<span class="label">Brottsplats: </span><br />@Model.Place
	</p>
	<p>
		<span class="label">Brottsdatum: </span><br />@Model.DateOfObservation.ToShortDateString()
	</p>
	<p>
		<span class="label">Anmälare: </span><br />@Model.InformerName
	</p>
	<p>
		<span class="label">Telefon: </span><br />@Model.InformerPhone
	</p>
	<p>
		<span class="label">Observationer:</span><br />@Model.Observation
	</p>
</section>

<section id="rightColumn">
	<h3>Utredning</h3>

	<p>
		<span class="label">Status</span><br />@Model.StatusId
	</p>
	<p>
		<span class="label">Ansvarig avdelning: </span><br />@Model.DepartmentId	
	</p>
	<p>
		<span class="label">Handläggare: </span><br />@Model.EmployeeId
	</p>

	@if (Model.Samples.Count > 0)
	{
		<p>
			<span class="label">Provtagning: </span><br />

			@foreach (Sample sample in Model.Samples)
			{
				<a href="~/Sample/@sample.SampleName">@sample.SampleName</a><br />
			}
		</p>
	}
	else
	{
		<p>
			<span class="label">Provtagning: </span><br />(Inga prover)
		</p>
	}
	<p>
		<span class="label">Ytterligare information: </span><br />@Model.InvestigatorInfo
	</p>
	<p>
		<span class="label">Händelser: </span><br />@Model.InvestigatorAction
	</p>

	@if(Model.Pictures.Count>0)
	{
		<p>
			<span class="label">Bilder: </span><br />

		@foreach(Picture pic in Model.Pictures)
		{
			<a href="~/../Picture/@pic.PictureName">@pic.PictureName</a><br />
		}

		</p>
	}
	else
	{
		<p>
			<span class="label">Bilder: </span><br />(Inga bilder)
		</p>
	}
</section>

